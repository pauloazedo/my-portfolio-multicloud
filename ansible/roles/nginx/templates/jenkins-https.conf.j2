server {
    listen 80;
    server_name oci.jenkins.pauloazedo.dev;

    # Redirect all HTTP to HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name oci.jenkins.pauloazedo.dev;

    ssl_certificate     /etc/letsencrypt/live/oci.jenkins.pauloazedo.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/oci.jenkins.pauloazedo.dev/privkey.pem;

    location / {
        proxy_pass http://localhost:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Automatically log in as guest via reverse proxy auth
        proxy_set_header X-Forwarded-User guest;
    }
}